<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Listings</title>
    <link rel="stylesheet" href="/index.css">
</head>
<body>
    <%- include('./partials/header.ejs') %>
    <main>
        <h1>All Listings</h1>
        <div class="container">
            <% for(list of data) {%>
                    <div class="ind-container">
                        <h3> <%= list.title %> </h3>
                        <a href="http://localhost:8080/individualListing/<%=list._id.toString()%>">
                            <div class="content">
                                <img loading="lazy" src="<%=list.image.url%>" alt="<%= list.image.filename %>">
                                <p><strong>Description: </strong><%= list.description %></p>
                                <p><strong>Location: </strong><%= list.location %></p>
                                <p><strong>Country: </strong><%= list.country %></p>
                                <p><strong>Price: &#8377; </strong><%= list.price.toLocaleString("en-IN") %></p>
                            </div>
                        </a>
                        <hr>
                        <div class="buttons">
                            <a href="http://localhost:8080/editList/<%= list._id.toString() %>"><button>Edit</button></a>
                            <form action="/deleteList/<%= list._id.toString() %>?_method=DELETE" method="post">
                                <button class="delete" type="submit">Delete</button>
                            </form>
                        </div>
                    </div>
                <% } %>
        </div>
        <div class="add">
            <a href="http://localhost:8080/addList">
            <button>Add new listing</button>
        </a>
        </div>
    </main>
</body>
<script>
    const deleteBtn = document.querySelector('.delete');

    deleteBtn.addEventListener('click', () => {
        const confired = confirm('Do you really want to Delete? It cannot be undone.');
        if(!confirmed) {
            e.preventDefault();
        }
    });
</script>
</html>